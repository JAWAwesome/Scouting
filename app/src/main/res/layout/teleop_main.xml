<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/teleopMain"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/other_Option_Button_Done"
            android:onClick="onButtonPress"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_marginBottom="15dp"
                    android:text="@string/teleop_Cross_Defense_TextView"
                    android:id="@+id/cross_Defense_Teleop_TextView" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/teleop_Shoot_TextView"
                    android:id="@+id/shoot_Goal_Teleop_TextView" />
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/cross_Defense_Teleop_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/crossdefense"
                    android:adjustViewBounds="false" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/shoot_Goal_Teleop_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shootgoal"
                    android:adjustViewBounds="false" />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/cross_Defense_Teleop_Button"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/teleop_Action_Proceed" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/shoot_Goal_Teleop_Button"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/teleop_Action_Proceed" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/teleop_Challenge_TextView"
                    android:id="@+id/challenge_Tower_Teleop_TextView" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/teleop_Scale_Tower_TextView"
                    android:id="@+id/scale_Tower_Teleop_TextView" />
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/challenge_Tower_Teleop_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/challengedtower"
                    android:adjustViewBounds="false" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/scale_Tower_Teleop_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/scaledtower"
                    android:adjustViewBounds="false" />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/challenge_Tower_Teleop_Button"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/teleop_Action_Proceed" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/scale_Tower_Teleop_Buttom"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/teleop_Action_Proceed" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/teleop_Breech_Defense_TextView"
                    android:id="@+id/breech_Teleop_TextView" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/teleop_Capture_Tower_TextView"
                    android:id="@+id/capture_Teleop_TextView" />
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/breech_Teleop_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/breechdefense"
                    android:adjustViewBounds="false" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/capture_Teleop_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/capturedtower"
                    android:adjustViewBounds="false" />
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/breech_Teleop_Button"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/teleop_Action_Proceed" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/capture_Teleop_Button"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/teleop_Action_Proceed" />
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!-- Progression button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/teleop_Button_Back_Teleop"
                android:id="@+id/button_Back_Teleop"
                android:onClick="changePageDown"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/teleop_Button_Done_Teleop"
                android:id="@+id/button_Done_Teleop"
                android:onClick="done"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>