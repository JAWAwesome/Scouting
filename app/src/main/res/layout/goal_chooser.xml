<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/teleopMain"
    tools:context=".MainActivity$PlaceholderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/goalMade"
            android:id="@+id/shooting_TextView" />
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_horizontal">
            <TableRow>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/upper_Goal_Left_Image_General"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upperlefttower"
                    android:adjustViewBounds="false"
                    android:layout_column="0"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/upper_Goal_Middle_Image_General"
                    android:scaleType="fitCenter"
                    android:src="@drawable/uppermiddletower"
                    android:adjustViewBounds="false"
                    android:layout_column="1" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/upper_Goal_Right_Image_General"
                    android:scaleType="fitCenter"
                    android:src="@drawable/upperrighttower"
                    android:adjustViewBounds="false"
                    android:layout_column="2" />
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/upperLeftGoal"
                    android:id="@+id/upper_Goal_Left_Check_General"
                    android:layout_column="0"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/upperMiddleGoal"
                    android:id="@+id/upper_Goal_Middle_Check_General"
                    android:layout_column="1"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/upperRightGoal"
                    android:id="@+id/upper_Goal_Right_Check_General"
                    android:layout_column="2"/>
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/lower_Left_Goal_Image_General"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bottomlefttower"
                    android:adjustViewBounds="false"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/no_Goal_Image_General"
                    android:scaleType="fitCenter"
                    android:src="@drawable/miss"
                    android:adjustViewBounds="false"
                    android:layout_column="1" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/lower_Right_Goal_Image_General"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bottomrighttower"
                    android:adjustViewBounds="false"
                    android:layout_column="2" />
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/lowerLeftGoal"
                    android:id="@+id/lower_Goal_Left_Check_General"
                    android:layout_column="0"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/noGoal"
                    android:id="@+id/no_Goal_Radio"
                    android:layout_column="1"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/lowerRightGoal"
                    android:id="@+id/lower_Goal_Right_Check_General"
                    android:layout_column="2"/>
            </TableRow>
        </TableLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goal_Button"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/other_Option_Button_Done" />
    </LinearLayout>
</ScrollView>
