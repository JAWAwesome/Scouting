<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/autoMain"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Defenses -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Defenses_Crossable"
            android:id="@+id/defenses_Crossable_TextView" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/sallyport"
                    android:id="@+id/sally_Port_CheckBox"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/sally_Port_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sallyport"
                    android:adjustViewBounds="false"
                    android:layout_column="1"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/drawbridge"
                    android:id="@+id/drawbridge_CheckBox"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/drawbridge_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/drawbridge"
                    android:adjustViewBounds="false"
                    android:layout_column="1"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/moat"
                    android:id="@+id/moat_CheckBox"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/moat_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/moat"
                    android:adjustViewBounds="false"
                    android:layout_column="1"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/rockwall"
                    android:id="@+id/rock_Wall_CheckBox"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/rock_Wall_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rockwall"
                    android:adjustViewBounds="false"
                    android:layout_column="1"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/roughTerrain"
                    android:id="@+id/rough_Terrain_CheckBox"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/rough_Terrain_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/roughterrain"
                    android:adjustViewBounds="false"
                    android:layout_column="1"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/portcullis"
                    android:id="@+id/portcullis_CheckBox"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/portcullis_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/portcullis"
                    android:adjustViewBounds="false"
                    android:layout_column="1"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/ramparts"
                    android:id="@+id/ramparts_CheckBox"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/ramparts_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ramparts"
                    android:adjustViewBounds="false"
                    android:layout_column="1"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/chevaldefrise"
                    android:id="@+id/cheval_De_Frise_CheckBox"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/cheval_De_Frise_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/chevaldefrise"
                    android:adjustViewBounds="false"
                    android:layout_column="1"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/hiddenPassage"
                    android:id="@+id/hidden_Passage_CheckBox"
                    android:layout_column="0" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/hidden_Passage_Image"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hiddenpassage"
                    android:adjustViewBounds="false"
                    android:layout_column="1"/>
            </TableRow>
        </TableLayout>
        <!-- Drive Type -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/drive_Type_Image"
            android:scaleType="fitCenter"
            android:src="@drawable/but"
            android:adjustViewBounds="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Drive_Type"
            android:id="@+id/drive_Type_TextView" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/drive_Type_Spinner"/>
        <!-- Drive Connection Type -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/drive_Connection_Image"
            android:scaleType="fitCenter"
            android:src="@drawable/chain"
            android:adjustViewBounds="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Connection_Type"
            android:id="@+id/drive_Connection_Type_TextView" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/drive_Connection_Type_Spinner"/>
        <!-- Number of Wheels -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Number_Wheels"
            android:id="@+id/number_Wheels_TextView" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">
            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_rew"
                android:background="#000000"
                android:layout_weight="1"
                android:id="@+id/number_Wheels_Down"
                android:onClick="down"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/wheel_Count" />
            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_ff"
                android:background="#000000"
                android:layout_weight="1"
                android:id="@+id/number_wheels_Up"
                android:onClick="up"/>
        </LinearLayout>
        <!-- Wheel Type -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/wheel_Type_Image"
            android:scaleType="fitCenter"
            android:src="@drawable/meca"
            android:adjustViewBounds="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Wheel_Type"
            android:id="@+id/wheel_Type_TextView" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/wheel_Type_Spinner"/>
        <!-- Number of Motors -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Number_Motors"
            android:id="@+id/number_Motors_TextView" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">
            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_rew"
                android:background="#000000"
                android:layout_weight="1"
                android:id="@+id/number_Motors_Down"
                android:onClick="down"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/motor_Count" />
            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_ff"
                android:background="#000000"
                android:layout_weight="1"
                android:id="@+id/number_Motors_Up"
                android:onClick="up"/>
        </LinearLayout>
        <!-- Shifters -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Shifters"
            android:id="@+id/shifters_TextView" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pits_Shifter_No"
                android:id="@+id/shifter_No_Radio"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pits_Shifter_Yes"
                android:id="@+id/shifter_Yes_Radio"/>
        </RadioGroup>
        <!-- Weight -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Weight"
            android:id="@+id/weight_TextView" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/robot_Weight_EditText"
            android:layout_gravity="center_horizontal" />
        <!-- Height -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Height"
            android:id="@+id/height_TextView" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/height_EditText"
            android:layout_gravity="center_horizontal" />
        <!-- Width -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Width"
            android:id="@+id/width_TextView" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/width_EditText"
            android:layout_gravity="center_horizontal" />
        <!-- Length -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Length"
            android:id="@+id/length_TextView" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/length_EditText"
            android:layout_gravity="center_horizontal" />
        <!-- Quality -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/pits_Quality"
            android:id="@+id/quality_TextView" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/quality_Spinner"/>
        <!-- Progression buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pits_Button_Back_Pits"
                android:id="@+id/button_Back_Pits"
                android:onClick="changePageDown"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pits_Button_Next_Pits"
                android:id="@+id/button_Next_Pits"
                android:onClick="changePageUp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>